@{
    ViewData["Title"] = "Home Page - Contact";
}

@model EmailData

<div class="row">
    <div class="col-12 text-center">
        <h1 class="display-4">Optoma Pretask</h1>
        
        <p>Below is the optoma pretask.   This is a very basic contact form that would send an email to optoma.</p>
        <p>Please can you complete the implementation of the below form.</p>
    </div>
</div>
<div class="row justify-content-center text-center">
    <div class="col-8">
        <form asp-action="Index" method="post" enctype="multipart/form-data">
            <div class="form-group mb-2">
                <label asp-for="Name" class="control-label"></label>
                <input type="text" class="form-control" asp-for="Name">
                <span asp-validation-for="Name" class="text-danger" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="Email" class="control-label"></label>
                <input type="text" class="form-control" asp-for="Email">
                <span asp-validation-for="Email" class="text-danger" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="Message" class="control-label"></label>
                <textarea type="text" class="form-control" asp-for="Message"></textarea>
                <span asp-validation-for="Message" class="text-danger" />
            </div>
            
            <div class="form-group mb-2">
                <label asp-for="Attachments" class="control-label"></label>
                <input type="file" class="form-control" id="attachments" asp-for="Attachments" multiple="multiple" accept="image/gif, image/jpg, image/jpeg"></input>
            </div>

            <div class="form-group mb-2">
                <input type="submit" class="btn btn-primary" value="Send">
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}